<body>
  <div>

    <form method="post" action=" /products/<%= news._id %>/update " enctype="multipart/form-data">
      <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">Title </label>
        <div class="col-sm-12 col-md-10">
          <input class="form-control" type="text" value="<%= news.title %> " placeholder="Press name" name="title" required />
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">Description</label>
        <div class="col-sm-12 col-md-10">
          <input class="form-control" value="<%= news.description %> " id="haha" placeholder="Press description" type="text" name="description" required />
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">Image</label>
        <div class="col-sm-12 col-md-10">
          <input class="form-control" type="file" accept="image/*" name="imageUrl" onchange="loadFile(event)" />
          <img src="<%= news.imageUrl %> " id="output" alt="" width="100" height="100">
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">Category</label>
        <select name="categoryID" id="">
          <option selected value="<%= news.category._id %> "><%= news.category.name %> </option>
        </select>
      </div>
      <div class="text-right">
        <button class="btn btn-primary" type="submit">Update News</button>
      </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
