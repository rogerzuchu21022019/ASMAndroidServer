<body>
  <div>

    <form>
      <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">Title </label>
        <p><%= news.title %></p>

      </div>
      <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">Description</label>
        <p><%= news.description %></p>
      </div>
      <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">Image</label>
        <img src="<%= news.imageUrl %> " id="output" alt="" width="100" height="100">
      </div>

      <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">Category</label>
        <p><%= news.category.name %></p>
      </div>

  </div>

  </form>
  <br />

  <div>
    <button class="btn btn-primary" onclick="clickToChange('showListComment')">Show comments</button>
  </div>
  <br />

  <div id="showListComment" >
    <% const options = [1,2,3,4,5] %>
    <% options.forEach(element => { %>
    <p onclick="clickToChange('editComment')"><%= element %> </p>
    <% }) %>
    <button class="btn btn-primary" onclick="clickToChange('showFormAddComment')">Add comment</button>
  </div>
  <br>
  
  <div id="editComment" hidden>
    <p onclick="clickToChange('showFormAddComment')">Edit</p>
    <p onclick="alert('delete')">delete</p>
  </div>

  <div id="showFormAddComment" hidden>
    <form action="">
      <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">Content</label>
        <div class="col-sm-12 col-md-10">
          <input class="form-control" id="haha" placeholder="Press content" type="text" name="content" required />
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">ID</label>
        <div class="col-sm-12 col-md-10">
          <input class="form-control" id="haha" value="<%= news._id %> " disabled type="text" name="content" required />
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">userID</label>
        <div class="col-sm-12 col-md-10">
          <input class="form-control" id="haha" value="<%= user.id %> " disabled type="text" name="content" required />
        </div>
      </div>
      <div class="text-right">
        <button class="btn btn-primary" type="submit" onclick="clickToChange('showFormAddComment')">Done</button>
      </div>

    </form>
  </div>


  <script>
    // show or hide div 
    const clickToChange = (id) => {
      const showDiv = document.getElementById(id);
      if (showDiv.style.display === "none") {
        showDiv.style.display = "block";
      } else {
        showDiv.style.display = "none";
      }
    }
  </script>


  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
